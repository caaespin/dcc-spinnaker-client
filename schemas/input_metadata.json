    "type": "object",
    "required": ["program", "project", "center_name", "submitter_donor_id", "submitter_donor_primary_site", "submitter_specimen_id", "submitter_specimen_type", "submitter_experimental_design", "submitter_sample_id", "analysis_type", "workflow_name", "workflow_version", "file_type", "file_path"],
    "properties": {
        "program": {
            "type": "string"
        },
        "project": {
            "type": "string"
        },
        "center_name": {
            "type": "string"
        },
        "submitter_donor_id": {
            "type": "string"
        },
        "submitter_donor_primary_site":{
            "type": "string"
        },
        "donor_uuid": {
            "type": "string"
        },
        "submitter_specimen_id": {
            "type": "string"
        },
        "specimen_uuid": {
            "type": "string"
        },
        "submitter_specimen_type": {
            "type": "string"
        },
	"submitter_experimental_design": {
	    "type": "string"
	},
        "submitter_sample_id": {
            "type": "string"
        },
        "sample_uuid": {
            "type": "string"
        },
        "analysis_type": {
            "type": "string"
        },
        "workflow_name": {
            "type": "string"
        },
        "workflow_version": {
            "type": "string"
        },
        "file_type": {
            "type": "string"
        },
        "file_path": {
            "type": "string"
        },
        "cloud":{
            "type": "string"
        } 
    }
}
